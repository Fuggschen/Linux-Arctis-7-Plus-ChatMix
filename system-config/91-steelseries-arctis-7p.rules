# Arctis 7+ and Nova 7 WoW Edition - USB permissions
# Allow all users access to the device
SUBSYSTEM=="usb", ATTR{idVendor}=="1038", ATTR{idProduct}=="220e", MODE="0666"
SUBSYSTEM=="usb", ATTR{idVendor}=="1038", ATTR{idProduct}=="227a", MODE="0666"

# Systemd device unit aliases
ACTION=="add", SUBSYSTEM=="usb", ATTR{idVendor}=="1038", ATTR{idProduct}=="220e", TAG+="systemd", ENV{SYSTEMD_ALIAS}="/dev/arctis7"
ACTION=="add", SUBSYSTEM=="usb", ATTR{idVendor}=="1038", ATTR{idProduct}=="227a", TAG+="systemd", ENV{SYSTEMD_ALIAS}="/dev/arctis7"
ACTION=="remove", SUBSYSTEM=="usb", ENV{PRODUCT}=="1038/220e/*", TAG+="systemd"
